#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
  keymap {
    compatible = "zmk,keymap";

    default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB  |  Q   |  W   |  E   |  R   |  T   |   Y   |  U    |  I   |  O   |   P   | BSPC   |
// |  ESC  |  A   |  S   |  D   |  F   |  G   |   H   |  J    |  K   |  L   |   ;   |  RET   |
// | SHIFT |  Z   |  X   |  C   |  V   |  B   |   N   |  M    |  ,   |  .   |   /   |  LWR   |
// | LCTRL | LALT | RAIS | ---  | ---- |     SPACE    |  ---- | ---- | RGUI | RALT  |  RCTRL |
      bindings = <
  &kp TAB      &kp Q    &kp W &kp E &kp R &kp T  &kp Y   &kp U  &kp I    &kp O   &kp P    &kp BKSP
  &kp ESC &kp A    &kp S &kp D &kp F &kp G  &kp H   &kp J  &kp K    &kp L   &kp SCLN &kp RET
  &kp LSHFT     &kp Z    &kp X &kp C &kp V &kp B  &kp N   &kp M  &kp CMMA &kp DOT &kp SLASH &mo 2
  &kp LCTRL     &kp LALT &mo 1 &trans &trans &kp SPC &trans &kp RGUI &kp RALT &kp RCTRL
      >;
    };

    raise_layer {
// -----------------------------------------------------------------------------------------
// |  trn  |  1   |  2   |  3   |  4   |  5   |   6   |  7    |  8   |  9   |   0   |  trn   |
// |  trn  |  LFT   |  DN   |  UP   |  RIT   |  -   |   =   |  [    |  ]   |  '   |   trn  |  trn   |
// |  trn  |  BT CLR   |  BT 0   |  trn   |  trn   |  trn   |   trn   |  \    |  trn  |  trn  |   trn   |  trn   |
// |  trn  |  trn | trns | ---  | ---- |     trns     |  ---- | ---- | RGUI | RALT  |  RCTRL |
      bindings = <
      &kp GRAVE &kp NUM_1 &kp NUM_2 &kp NUM_3 &kp NUM_4 &kp NUM_5 &kp NUM_6 &kp NUM_7 &kp NUM_8 &kp NUM_9 &kp NUM_0 &trans
      &trans &kp LEFT &kp DOWN &kp UP &kp RIGHT &kp MINUS &kp EQUAL &kp LBKT &kp RBKT &kp SQT &trans &trans
      &trans &kp C_VOL_DN &kp C_VOL_UP &kp C_PP &trans &trans &trans &kp BSLH &trans &trans &trans &trans
      &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
      >;
    };

    lower_layer {
      bindings = <
      &kp TILDE &kp EXCL &kp AT &kp POUND &kp DLLR &kp PRCNT &kp CARET &kp AMPS &kp STAR &kp LPAR &kp RPAR &trans
      &trans &trans &trans &trans &trans &kp UNDER &kp PLUS &kp LBKT &kp RBKT &kp DQT &kp COLON &trans
      &bt BT_CLR &bt BT_SEL 0 &trans &trans &trans &trans &trans &kp PIPE &trans &trans &trans &trans
      &bootloader &reset &trans &trans &trans &trans &trans &trans &trans &trans
      >;
    };
  };
};
